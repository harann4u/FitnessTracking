{
  "compilerOptions": {
    "target": "ES2020", // Modern JS features
    "module": "CommonJS", // Node.js compatible
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": [
      "vitest",
      "vite/client"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "rootDir": "src", // Where your TypeScript files are
    "outDir": "dist", // Where compiled JS goes
    "strict": true, // Enable all strict type-checking
    "esModuleInterop": true, // Import compatibility with CommonJS
    "forceConsistentCasingInFileNames": true, // Case sensitivity check
    "skipLibCheck": true, // Faster build
    "allowSyntheticDefaultImports": true,
    //  "verbatimModuleSyntax": true,
    "importsNotUsedAsValues": "error"
  },
  "include": [
    "src"
  ], // Include all TS files inside src
  "exclude": [
    "src/node_modules"
  ] // Exclude dependencies
}